{
  "name": "@madnesslabs/enjin-components",
  "version": "0.0.8",
  "description": "A set of components to make it easier to build apps",
  "module": "dist/index.mjs",
  "main": "dist/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "jsnext:main": "dist/esm/index.mjs",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "files": [
    "dist/"
  ],
  "scripts": {
    "prepublish": "npm run build",
    "build": "stencil build",
    "dev": " stencil build --docs --dev --watch --serve",
    "docs": " stencil build --docs",
    "start": "npm-run-all --parallel dev phases:watch",
    "test": "stencil test --spec",
    "test:e2e": "stencil test --e2e",
    "test:snapshot": "stencil test --e2e --screenshot",
    "test:generate": "stencil test --spec --json --outputFile=src/jest-test-results.json",
    "test:generate:watch": "stencil test --spec --json --outputFile=src/jest-test-results.json --watch",
    "phases:build": "node tasks/compilePhases.js",
    "phases:watch": "node tasks/compilePhases.js watch",
    "test:watch": "stencil test --spec --watch",
    "story": "npm-run-all --parallel start storybook",
    "story:test": "npm run test:generate && npm run story",
    "storybook": "start-storybook -p 9001 -c .storybook -s www"
  },
  "dependencies": {
    "@stencil/core": "^1.2.2",
    "@stencil/router": "one",
    "marked": "^0.7.0",
    "slideout": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@storybook/addon-actions": "^5.0.3",
    "@storybook/addon-jest": "^5.0.3",
    "@storybook/addon-notes": "^5.0.3",
    "@storybook/addon-viewport": "^5.0.3",
    "@storybook/html": "^5.0.3",
    "@types/jest": "23.3.14",
    "@types/requirejs": "^2.1.31",
    "@types/stripe-v3": "^3.0.9",
    "babel-loader": "^8.0.5",
    "copy-webpack-plugin": "^5.0.1",
    "fast-glob": "^2.2.6",
    "jest": "23.6.0",
    "jest-cli": "23.6.0",
    "npm-run-all": "^4.1.5",
    "write-file-webpack-plugin": "^4.5.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/madnesslabs/enjin-components.git"
  },
  "author": "Madness Labs",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/madnesslabs/enjin-components/issues"
  },
  "homepage": "https://github.com/madnesslabs/enjin-components",
  "jest": {
    "preset": "@stencil/core/testing"
  }
}
